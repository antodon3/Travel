<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorapp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/plans_iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>
        <TextView
            android:id="@+id/plans_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丽江--大理经典4日游"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/plans_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/share"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <!--纵向scrollview-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/map_iv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/baidumap"
                    android:scaleType="centerCrop"/>
                <LinearLayout

                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:background="#faf9f9f9"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/detail_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行程地图"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/detail_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4天，22条旅行计划"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colortext"/>
                </LinearLayout>
            </RelativeLayout>
            <!---listview-->
            <com.oy.widget.MyListView
                android:id="@+id/plans_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.oy.widget.MyListView>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="复制这条行程"
        android:textColor="#fff"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="#7bd93d"/>
</LinearLayout>